#include <ESP32Servo.h>
Servo servo;
int pinServo = 2;
void setup()
{
  servo.attach(pinServo, 500, 2500);
}
int pos = 0; //Posici√≥n inicial
void loop() 
{
  for (pos = 0; pos <= 90; pos += 1) 
  {
    servo.write(pos);
    delay(15);
  }
  for (pos = 90; pos >= 0; pos -= 1) {
    servo.write(pos);
    delay(15);
  }
}
